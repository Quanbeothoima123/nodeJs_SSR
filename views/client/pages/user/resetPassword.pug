extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  .container.my-5
    .row.justify-content-center
        .col-8
            h1.text-center Nhập mật khẩu mới
            form(
                action="/user/password/reset",
                method="POST"
            )
                div.form-group
                label(for="password") Mật khẩu mới
                input(
                    type="text",
                    class="form-control",
                    id="password",
                    name="password",
                )
                div.form-group
                label(for="passwordRewrite") Nhập lại mật khẩu mới
                input(
                    type="text",
                    class="form-control",
                    id="passwordRewrite",
                    name="passwordRewrite",
                )
                div.form-group
                button(
                    type="submit",
                    class="btn btn-primary btn-block"
                ) Xác nhận
