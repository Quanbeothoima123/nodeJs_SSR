mixin table-tree-post-category(items, level = 1)
  each item, index in items
    - const prefix = '-- '.repeat(level)

    tr
      td
        input(type="checkbox", name="id", value=item.id)
      td #{item.index || index + 1}
      td
        if item.thumbnail
          img(src=item.thumbnail, alt=item.title, width="100px", height="auto")
        else
          i.text-muted Không có ảnh
      td #{prefix}#{item.title}
      td
        input(
          type="number"
          value=item.position
          name="position"
          min="1"
          style="width: 60px"
        )
      if(role.permissions.includes("posts-category_edit"))
        td
          if item.status == "active"
            a(
              href="javascript:;"
              class="badge badge-success"
              data-status=item.status
              button-change-status
              data-id=item.id
            ) Hoạt động
          else
            a(
              href="javascript:;"
              class="badge badge-danger"
              data-status=item.status
              button-change-status
              data-id=item.id
            ) Dừng hoạt động
      else 
        td
          if item.status == "active"
            span(
              class="badge badge-success"
            ) Hoạt động
          else
            span(
              class="badge badge-danger"
            ) Dừng hoạt động        
      td #{item.accountFullName}
          if(item.timeCreated)
              br
              #{moment(item.tiemCreated).format("DD/MM/YYYY HH:mm:ss")}   
          else
              br 
              span Chưa biết
      td #{item.accountFullNameUpdated}
          if(item.timeUpdated)
              br
              #{moment(item.timeUpdated).format("DD/MM/YYYY HH:mm:ss")}   
          else 
              br
              span Chưa biết
      td
        a(
          href=`${prefixAdmin}/posts-category/detail/${item.id}`
          class="btn btn-success btn-sm"
        ) Chi tiết
        if(role.permissions.includes("products-category_edit"))
          a(
            href=`${prefixAdmin}/posts-category/edit/${item.id}`
            class="btn btn-warning btn-sm ml-1"
          ) Sửa
          button(
            type="button"
            class="btn btn-danger btn-sm ml-1"
            data-id=item.id
            button-delete
          ) Xoá

    // Gọi đệ quy nếu có con
    if item.children && item.children.length > 0
      +table-tree-post-category(item.children, level + 1)
