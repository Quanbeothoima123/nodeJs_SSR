mixin pagination(pagination)
    nav
        ul.pagination

            //- Trang trước
            if pagination.currentPage > 1
                li.page-item
                    button(class="page-link" button-pagination=pagination.currentPage - 1) Trang trước

            //- Trang đầu và dấu "..."
            if pagination.currentPage > 3
                li.page-item
                    button(class="page-link" button-pagination=1) 1
                li.page-item.disabled
                    span.page-link ...

            //- Các trang liền kề: currentPage -1, currentPage, currentPage +1
            - for (var i = pagination.currentPage - 1; i <= pagination.currentPage + 1; i++)
                if i >= 1 && i <= pagination.totalPage
                    li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                        button(class="page-link" button-pagination=i)= i

            //- Dấu "..." và trang cuối
            if pagination.currentPage < pagination.totalPage - 2
                li.page-item.disabled
                    span.page-link ...
                li.page-item
                    button(class="page-link" button-pagination=pagination.totalPage)= pagination.totalPage

            //- Trang sau
            if pagination.currentPage < pagination.totalPage
                li.page-item
                    button(class="page-link" button-pagination=pagination.currentPage + 1) Trang sau
