mixin select-tree(items, selectedId, level = 1)
  each item in items
    - const prefix = Array(level + 1).join('-- ')
    - const isSelected = (item.id && selectedId && item.id.toString() === selectedId.toString())
    option(
      value=item.id
      selected=isSelected
    ) #{prefix}#{item.title}
    if item.children && item.children.length > 0
      +select-tree(item.children, selectedId, level + 1)
