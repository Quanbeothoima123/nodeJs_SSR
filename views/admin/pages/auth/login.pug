extend ../../layouts/auth.pug
include ../../mixins/alert.pug
block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow-lg
          .card-body
            h2.text-center.mb-4 Đăng nhập

            form(action=`${prefixAdmin}/auth/login`, method="POST")
              .form-group
                label(for="email") Email
                input#email.form-control(type="email", name="email", required=true, placeholder="Nhập email")

              .form-group
                label(for="password") Mật khẩu
                input#password.form-control(type="password", name="password", required=true, placeholder="Nhập mật khẩu")

              button.btn.btn-primary.btn-block(type="submit") Đăng nhập

            hr

            .text-center
              small.text-muted © 2025 Admin Panel
