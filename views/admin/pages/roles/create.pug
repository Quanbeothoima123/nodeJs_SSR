extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  h1(class="mb-4") Thêm mới nhóm quyền

  form(
    action=`${prefixAdmin}/roles/create`
    method="POST"
    id="form-create-role"
  )
    //- Tên quyền
    div(class="form-group")
      label(for="title") Tên quyền
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )

    //- Mô tả
    div(class="form-group")
      label(for="description") Mô tả
      textarea(
        class="form-control"
        id="description"
        name="description"
        rows="4"
      )

    //- Nút submit
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-success"
      ) Thêm mới
