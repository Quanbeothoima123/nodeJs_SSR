extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/filter-status.pug
include ../../mixins/filter-role-account.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
block main
  +alert-error(5000) 
  +alert-success(5000)
  if(role.permissions.includes("accounts_view"))
    h1 Trang tài khoản
    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
          .col-4 
            +filter-status(filterStatus)
          .col-4 
            +filter-role-account(filterRoleAccount)
          .col-4
            +search(keyword)
    .card.mb-3
      .card-header Sắp xếp
      .card-body
        .row 
          .col-4(sortAccount)
            div(sortAccount)
              select.form-control(name="sortAccount" sort-select-account)
                option(value="fullName-asc") Tên A - Z
                option(value="fullName-desc") Tên Z - A
              button.btn.btn-danger.mt-2(sort-clear-account) Clear
                  
    .card.mb-3
      .card-header Danh sách tài khoản
      .card-body
        .row
          if(role.permissions.includes("products_edit")) 
            .col-8
              +form-change-multi(`${prefixAdmin}/accounts/change-multi?_method=PATCH`)
          if(role.permissions.includes("accounts_create"))  
            .col-8
              a(href=`${prefixAdmin}/accounts/create` class="btn btn-outline-success") + Thêm mới
        table.table.table-hover.table-sm(checkbox-multi)
          thead
            tr
              th STT
              th Avatar
              th Họ tên
              th Email
              th SĐT
              th Trạng thái
              th Quyền
              th Hành động
          tbody
            each item, index in accounts
              tr
                td #{index + 1}
                td 
                  if item.avatar
                    img(src=item.avatar, alt="avatar", width="40", height="40", style="object-fit: cover; border-radius: 50%")
                  else
                    span.text-muted Không có
                td #{item.fullName}
                td #{item.email}
                td #{item.phone}
                td
                  if item.status == "active"
                    a(href="javascript:;" class="badge badge-success" data-status=item.status button-change-status data-id=item.id) Hoạt động
                  else
                    a(href="javascript:;" class="badge badge-danger" data-status=item.status button-change-status data-id=item.id) Dừng hoạt động
                td #{item.role.title}
                td
                  a(href=`${prefixAdmin}/accounts/detail/${item._id}` class="btn btn-warning btn-sm") Chi tiết
                  if(role.permissions.includes("accounts_edit")) 
                    a(href=`${prefixAdmin}/accounts/edit/${item._id}` class="btn btn-success btn-sm ml-1") Sửa
                    button(class="btn btn-danger btn-sm ml-1" data-id=item._id button-delete) Xóa
    +pagination(pagination)
    form(
      action=""
      method="POST"
      id="form-delete-item"
      data-path=`${prefixAdmin}/accounts/delete`
    )
    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/accounts/change-status`
    )

    script(src="/admin/js/account.js")
  else
    div Hiện tại bạn không có quyền xem trang này
